<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="script.module.archivczsk.common"
	name="XBMC to archivczsk bridge"
	version="1.0.0"
	provider-name="Maros Ondrasek">
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary>Contains archivczsk methods to port XBMC plugins</summary>
    <description></description>
    <license>GNU GPL</license>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.tv.sme.sk"
       name="TV SME.sk"
       version="1.0.0"
       provider-name="Radim Stoklasa">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.archivczsk.common" version="1.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>TV SME.sk video-archive plugin</summary>
    <summary lang="sk">Internetová televízia SME.sk</summary>
    <summary lang="cs">Internetová televize SME.sk</summary>
    <description>
        Plugin to play TV video archive tv.sme.sk
    </description>
    <description lang="cs">
        Plugin pro přehrávání videí z archivu tv.sme.sk
    </description>
    <description lang="sk">
        Plugin pre prehrávenie videí z archívu tv.sme.sk
    </description>
  </extension>
</addon>

<addon id="plugin.video.voyosk"
       name="Voyo SK TV Archiv"
       version="1.3.1"
       provider-name="mx3L">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.dmd-czech.common" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>VOYO SK video-archive plugin</summary>
    <summary lang="cs">VOYO SK - archiv</summary>
    <summary lang="sk">VOYO SK - archív</summary>
    <description>
        Plugin to play TV video archive from Voyo.sk
    </description>
    <description lang="cs">
        Plugin pro přehrávání videí z archivu Voyo.sk
    </description>
    <description lang="sk">
        Plugin pre prehrávanie videí z archívu Voyo.sk
    </description>
  </extension>
</addon>

<addon id="plugin.video.ta3"
       name="TA3 Archiv"
       version="1.00"
       provider-name="mx3L">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.dmd-czech.common" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Nova TV video-archive plugin</summary>
    <summary lang="cs">TA3 - archiv</summary>
    <description>
        Plugin to play TV video archive ta3.sk
    </description>
    <description lang="cs">
        Plugin pro přehrávání videí z archivu TA3
    </description>
  </extension>
</addon>
</addons>
